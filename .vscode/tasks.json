{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sketch compile",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "compile",
                "-b",
                "${config:fqbn}",
                "--build-path",
                "${workspaceFolder}/bld",
                "--output-dir",
                "${workspaceFolder}/bin",
                "${fileDirname}"
            ],
            "problemMatcher":"$gcc",
            "group":"build"
        },

        {
            "label": "sketch upload",
            "type": "shell",
            "command": "arduino-cli",
            "args": [
                "upload",
                "-b",
                "${config:fqbn}",
                "--input-dir",
                "${workspaceFolder}/bin",
                "-p",
                "${config:port}"
            ],
            "group": "build",
            "problemMatcher":"$gcc"
            // "dependsOn": "sketch compile"
        },

        // Test Suite Compilation
        {
            "label": "compile test suite",
            "type": "shell",
            "command": "g++",
            "args": [
                "-c",
                "../../src/test/${fileBasename}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bld/test"
            },
            "problemMatcher":"$gcc"
        },

        {
            "label": "build test suite",
            "type": "shell",
            "command": "g++",
            "args": [
                "../../bld/test/${fileBasenameNoExtension}.o",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-lgtest",
                "-lgtest_main"
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin/test"
            },
            "group": "test",
            "problemMatcher":"$gcc",
            "dependsOn": "compile test suite"
        }
    ]
}